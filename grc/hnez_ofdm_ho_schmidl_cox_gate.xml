<?xml version="1.0"?>
<block>
  <name>ho_schmidl_cox_gate</name>
  <key>hnez_ofdm_ho_schmidl_cox_gate</key>
  <category>[Hnez OFDM]</category>
  <import>import hnez_ofdm</import>
  <make>hnez_ofdm.ho_schmidl_cox_gate($fft_len, $cp_len, $rel_pw_lo, $rel_pw_hi)</make>

  <param>
    <name>FFT length</name>
    <key>fft_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Cyclic prefix length</name>
    <key>cp_len</key>
    <type>int</type>
  </param>

  <param>
    <name>Relative power low threshold</name>
    <key>rel_pw_lo</key>
    <type>float</type>
  </param>

  <param>
    <name>Relative power high threshold</name>
    <key>rel_pw_hi</key>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <sink>
    <name>frame_ack</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$fft_len</vlen>
  </source>
</block>
